<!DOCTYPE html>
<html ng-app="Lobby">
<head>
    <base href="/">

    <title>Registration on MusicLoud</title>

    <link href="/css/reset.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600&subset=latin,cyrillic' rel='stylesheet'
          type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/lobby.css">

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="icon" type="image/jpeg" href="/images/player-icon.jpg">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js"></script>

    <script src="/js/application/init.js"></script>
    <script src="/js/application/libs/functional.js"></script>
    <script src="/js/application/libs/angular-post-fix.js"></script>
    <script src="/js/application/lobby.js"></script>
</head>
<body>
<div class="lobby-wrapper">
    <div class="lobby-login-form" ng-controller="RegistrationController">
        <form class="login-form" ng-submit="submit()">
            <input class="block" type="text" ng-model="name" placeholder="Name" name="name" autocomplete="off">
            <input class="block" type="text" ng-model="login" placeholder="Login" name="login"
                   ng-required="true" autocomplete="off">
            <input class="block" type="password" ng-model="password" placeholder="Password" name="password"
                   ng-required="true">
            <input class="login" type="submit" value="Sign Up">
        </form>
    </div>
</div>
</body>
</html>